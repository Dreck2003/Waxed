// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  name     String
  lastName String
  userName String   @unique
  email    String   @unique
  password String   @unique
  course   Course[]
}

model Course {
  id       Int       @default(autoincrement())
  name     String    @id @unique
  content  String?
  img      String

  user     User      @relation(fields: [userId], references: [id])
  
  userId   Int
  link     Link[]
  archive  Archive[]
  createAt DateTime  @default(now())
  updateAt DateTime  @updatedAt
}

model Archive {
  id       Int      @id @default(autoincrement())
  
  name     String   @unique
  url      String   
  
  course   Course   @relation(fields: [courseId], references: [name])
  courseId String //RElacion con el nombre del curso el id es el nombre
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

}

model Link {
  id       Int      @id @default(autoincrement())
  url      String   
  name     String   @unique

  course   Course   @relation(fields: [courseId], references: [name])
  courseId String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}


model Task{
  id    Int @id @default(autoincrement()) 
  text  String 
  tach  Boolean @default(false)

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
}